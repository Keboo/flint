<Window x:Class="Windows.Pebble.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:Windows.Pebble.ViewModels" Title="Pebble" Height="350" Width="525">
    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>
    <StackPanel Margin="10">
        <TextBlock Text="Select Pebble" />
        <ComboBox ItemsSource="{Binding PebbleDevices}" IsSynchronizedWithCurrentItem="True" DisplayMemberPath="PebbleId" />

        <GroupBox Header="Pebble Info" DataContext="{Binding PebbleDevices/}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel>
                    <TextBlock Text="{Binding PebbleTime, StringFormat='Pebble Time: {0:G}'}" />
                    <TextBlock Text="{Binding CurrentTime, StringFormat='System Time: {0:G}'}" />
                </StackPanel>
                <GroupBox Header="Installed Apps" Grid.Row="1" Margin="0,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListBox ItemsSource="{Binding Apps}" IsSynchronizedWithCurrentItem="True">
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="_Remove App" Command="{Binding RemoveAppCommand}" CommandParameter="{Binding Apps/}"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                            <ListBox.Style>
                                <Style TargetType="ListBox">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Apps.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.Style>
                        </ListBox>
                        <TextBlock Text="No Apps Installed">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Apps.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Grid Grid.Row="1" Margin="0,10">
                            <Button Content="Install App" Command="{Binding InstallAppCommand}" Grid.Column="1" HorizontalAlignment="Left" Padding="10,2"/>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
    </StackPanel>
</Window>
